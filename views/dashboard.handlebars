{{#if posts.length}}
<section>
    <div class="d-flex justify-content-center align-items-center">
        <h2>Hello, {{username}}!</h2>
    </div>

    <div class="text-center">
        <h3>Your Posts</h3>
    </div>

    {{#each posts as |post|}}
    <input type="hidden" name="post-id" value="{{post.id}}"/> 
        <div class="card col-6 mx-auto text-center my-4">
            <div class="card-header">
                <h4><a class="link" href="/dashboard/edit/{{id}}">{{title}}</a></h4>
            </div>
            <div class="card-content">
                <p>{{content}}</p>
            </div>
            <div class=" d-flex justify-content-end">
                <button class="btn btn-danger col-2 mx-1 my-1" id="del-post-btn">Delete Post</button>     
            </div>                     
        </div>
    {{/each}}
    
</section>
{{/if}}

<div class="mx-auto col-6 text-center d-flex justify-content-end">
    <button type="submit" class="btn btn-info col-4">
        <a class="text-decoration-none text-reset" href="/dashboard/new">
        Add New Post
        </a>
    </button>
</div>

<script src="js/deletepost.js"></script>